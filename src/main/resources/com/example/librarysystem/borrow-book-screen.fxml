<AnchorPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #fcfcfc;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.librarysystem.brrBookController">
   <children>
      <VBox prefHeight="701.0" prefWidth="89.0" style="-fx-background-color: #61a46a #61a46a;">
         <children>
            <Button fx:id="home_btn" mnemonicParsing="false" onAction="#switchToMemberHomeScreen" prefHeight="100.0" prefWidth="88.0" style="-fx-background-color: #61a46a;" text="Home" textFill="WHITE">
               <font>
                  <Font name="Comic Sans MS" size="11.0" />
               </font></Button>
            <Button fx:id="books_list" mnemonicParsing="false" onAction="#switchToBookListScreen" prefHeight="100.0" prefWidth="88.0" style="-fx-background-color: #61a46a;" text="Books List" textFill="WHITE">
               <font>
                  <Font name="Comic Sans MS" size="11.0" />
               </font></Button>
            <Button fx:id="reserve_btn" mnemonicParsing="false" onAction="#switchToReserveScreen" prefHeight="100.0" prefWidth="88.0" style="-fx-background-color: #61a46a;" text="Reserve" textFill="WHITE">
               <font>
                  <Font name="Comic Sans MS" size="11.0" />
               </font></Button>
            <Button fx:id="Profile_btn" mnemonicParsing="false" onAction="#logOut" prefHeight="100.0" prefWidth="88.0" style="-fx-background-color: #61a46a;" text="Log out" textFill="WHITE">
               <font>
                  <Font name="Comic Sans MS" size="11.0" />
               </font></Button>
         </children>
      </VBox>
      <Label layoutX="143.0" layoutY="39.0" text="Borrow Book">
         <font>
            <Font name="Comic Sans MS Bold" size="36.0" />
         </font>
      </Label>
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="WHITE" height="107.0" layoutX="139.0" layoutY="102.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" style="-fx-arc-height: 40; -fx-arc-width: 40;" width="803.0" />
      <Button fx:id="addBook" layoutX="738.0" layoutY="150.0" mnemonicParsing="false" onAction="#borrow" prefHeight="26.0" prefWidth="165.0" style="-fx-background-color: #61a46a #61a46a; -fx-background-radius: 15;" text="Check out" textFill="WHITE">
         <font>
            <Font name="Comic Sans MS Bold" size="14.0" />
         </font>
      </Button>
      <Label layoutX="155.0" layoutY="123.0" text="Return Date">
         <font>
            <Font name="Comic Sans MS Bold" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="rDate" layoutX="155.0" layoutY="152.0" prefHeight="26.0" prefWidth="310.0" promptText="YYYY-MM-DD" />
   </children>
</AnchorPane>
